<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
    <defaultCache maxEntriesLocalHeap="20"
                  eternal="false"
                  timeToIdleSeconds="120"
                  timeToLiveSeconds="200"
                  memoryStoreEvictionPolicy="LRU"/>

    <cache name="com.github.nechai.aeroflot.dao.entity.WorkerEntity"
           maxEntriesLocalHeap="20"
           eternal="false"
           timeToIdleSeconds="300"
           timeToLiveSeconds="600">
        <persistence strategy="localTempSwap"/>
    </cache>
    <cache name="com.github.nechai.aeroflot.dao.entity.AirportEntity"
           maxEntriesLocalHeap="20"
           eternal="false"
           timeToIdleSeconds="300"
           timeToLiveSeconds="600">
        <persistence strategy="localTempSwap"/>
    </cache>
    <cache name="com.github.nechai.aeroflot.dao.entity.UserEntity"
           maxEntriesLocalHeap="20"
           eternal="false"
           timeToIdleSeconds="300"
           timeToLiveSeconds="600">
        <persistence strategy="localTempSwap"/>
    </cache>
    <cache name="com.github.nechai.aeroflot.dao.entity.PlaneEntity"
           maxEntriesLocalHeap="20"
           eternal="false"
           timeToIdleSeconds="300"
           timeToLiveSeconds="600">
        <persistence strategy="localTempSwap"/>
    </cache>
    <cache name="org.hibernate.cache.StandardQueryCache"
           maxEntriesLocalHeap="100"
           eternal="false"
           timeToLiveSeconds="120">
        <persistence strategy="localTempSwap"/>
    </cache>
</ehcache>
